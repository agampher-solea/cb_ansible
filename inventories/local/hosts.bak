# inventory.yml

all:
  hosts:
    couchbase-node1:
      ansible_host: couchbase-node1-ip
      ansible_user: root  # Set the SSH username to "root"
      ansible_port: 22

    couchbase-node2:
      ansible_host: couchbase-node2-ip
      ansible_user: root  # Set the SSH username to "root"
      ansible_port: 22

    couchbase-node3:
      ansible_host: couchbase-node3-ip
      ansible_user: root  # Set the SSH username to "root"
      ansible_port: 22

  children:
    couchbase_servers:
      hosts:
        couchbase-node1
        couchbase-node2
        couchbase-node3

  vars:
    ansible_ssh_common_args: '-o StrictHostKeyChecking=no'

